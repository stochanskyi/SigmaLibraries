
default_platform(:android)

platform :android do

  desc "Lint check"
  lane :lint do
    gradle(task: "lintDebug")
  end

  desc "Runs Unit tests"
  lane :tests do
    gradle(task: "test")
  end

  desc "Distribute to Firebase"
  lane :beta do
    gradle(task: "clean")
    gradle(
        task: 'assemble',
        build_type: 'Release',
        properties: {
            "maps_api_key_release" => ENV['GOOGLE_MAPS_API']
        }
    )
    firebase_app_distribution(
        service_credentials_file: ENV['FIREBASE_DISTRIBUTION_CREDENTIALS'],
        app: ENV['FIREBASE_APP_ID'],
        groups: "test-group"
    )
   end

end
